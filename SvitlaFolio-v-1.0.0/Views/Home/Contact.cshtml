@{
    ViewBag.Title = "Contact Koltsova Svetlana | Front End Developer";
}

@section Styles {
    <link href="@Url.Content("~/Content/sections/contact.css?v=1.0")" rel="stylesheet" type="text/css" />
}

<div class="container content">
    <div class="titlePage">
        <h2>Contact</h2>
    </div>
    <h1>Get in Touch!</h1>
    <h2 class="subtitle">We’re currently accepting new client projects. We look forward to serving you.</h2>
    <div class="row">
        <div class="col-md-8 col-xs-12 ">
            <div id="map-canvas" class="map-canvas"></div>
        </div>
        <div class="col-md-4 col-xs-12 contactInfo">
            <div class="contactData">
                <h2>Contact Details</h2>
                <p><a href="mailto:info@svitla.com">info@svitla.com</a></p>
                <p class="phone">650-917-9544</p>
                <p>
                    <span class="boldText">Svitla Systems, Inc.</span><br />
                    1501 Howard Street,<br />
                    San Francisco, California 94103<br />
                    USA
                </p>
            </div>
        </div>
        <div class="divider"></div>
    </div><!-- end .row -->
    @model SvitlaFolio_v_1._0._0.Models.SendEmailModel
    @using (Html.BeginForm("SendEmail", "Home", FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-4 col-sm-6 col-xs-12 ">
                <input name="fullName" id="fullName" type="text" placeholder="Full Name" required />
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12 ">
                <input name="email" id="email" type="email" placeholder="Email Address" required />
            </div>
            <div class="col-md-8 col-sm-12 col-xs-12 ">
                <textarea name="message" id="message" cols="30" rows="10" placeholder="Your Message"></textarea>
            </div>
        </div><!-- end .row -->
        <div class="row">
            <div class="col-md-offset-5 col-md-3 col-xs-12 ">
                <input name="submitForm" id="submitForm" type="submit" value="Send Message" />
            </div>
        </div><!-- end .row -->
    }
</div><!-- end .content -->

@section Scripts {
    <script>
        document.querySelector("header ul li:nth-child(4) a").className = "activeLink";
    </script>
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script src="@Url.Content("~/Scripts/Js/map.js")"></script>
    <script src="@Url.Content("~/Scripts/Js/contact.js")"></script>
}